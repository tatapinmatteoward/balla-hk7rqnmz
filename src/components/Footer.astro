---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-facebook', url: '#' },
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-twitter', url: '#' },
  { icon: 'fab fa-youtube', url: '#' }
];
---

<footer class="bg-[#166534] text-[#f0f0f0] py-8 border-t-4 border-[#7e22ce]">
  <div class="container mx-auto px-4 text-center">
    <p class="text-lg font-serif">&copy; {currentYear} Ballard Beat. All rights reserved.</p>
    <div class="flex justify-center gap-6 mt-4">
      {socialLinks.map((link) => (
        <a href={link.url} class="hover:text-[#7e22ce] transition-colors duration-300">
          <i class={link.icon}></i>
        </a>
      ))}
    </div>
  </div>
</footer>