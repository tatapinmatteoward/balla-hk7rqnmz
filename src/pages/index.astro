---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Ballard Beat: Echoes from the Court";
const pageDescription = "Welcome to Ballard Beat, where timeless basketball insights meet a warm, cozy vintage vibe. Explore echoes from the court that capture the heart of the game.";

const features = [
  { 
    icon: 'fas fa-book-open', 
    title: 'Timeless Tales', 
    text: 'Relive iconic plays and unsung heroes from basketball\'s golden ages.' 
  },
  { 
    icon: 'fas fa-coffee', 
    title: 'Cozy Insights', 
    text: 'Thoughtful analysis wrapped in nostalgic storytelling.' 
  },
  { 
    icon: 'fas fa-music', 
    title: 'Vintage Vibes', 
    text: 'A warm, cozy atmosphere that celebrates basketball\'s rich history.' 
  }
];

const testimonials = [
  { 
    quote: 'This site brought back so many memories of my childhood games!', 
    author: 'Michael T.' 
  },
  { 
    quote: 'The storytelling approach is unlike anything I\'ve seen in basketball journalism.', 
    author: 'Sarah K.' 
  },
  { 
    quote: 'Every article feels like sitting down for a cup of coffee with a legend.', 
    author: 'James R.' 
  }
];
---

<style>
  @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Merriweather:wght@300;400;700&display=swap');
  
  .vintage-text {
    font-family: 'Playfair Display', serif;
    letter-spacing: 0.02em;
  }
  
  .cozy-bg {
    background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
    box-shadow: inset 0 0 20px rgba(102, 51, 153, 0.1);
  }
  
  .feature-card {
    transition: all 0.3s ease;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  }
  
  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
  }
  
  .testimonial-card {
    border-left: 4px solid #7e22ce;
    background: white;
    border-radius: 0 12px 12px 0;
    padding: 1.5rem;
    position: relative;
  }
  
  .testimonial-card::before {
    content: """;
    position: absolute;
    top: -20px;
    left: 10px;
    font-size: 60px;
    color: #7e22ce;
    opacity: 0.3;
    font-family: 'Playfair Display', serif;
  }
  
  .hero-pattern {
    background-image: radial-gradient(#166534 1px, transparent 1px);
    background-size: 30px 30px;
  }
  
  .accent-border {
    border-top: 3px solid #7e22ce;
    padding-top: 1rem;
  }
</style>

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <header class="relative py-20 overflow-hidden">
    <div class="absolute inset-0 hero-pattern opacity-5"></div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="vintage-text text-5xl md:text-7xl font-bold text-gray-800 mb-6 leading-tight">
          Ballard Beat
        </h1>
        <div class="h-1 w-24 bg-primary mx-auto mb-8"></div>
        <p class="text-xl md:text-2xl text-gray-700 font-light mb-10">
          Echoes from the Court: Timeless Basketball Insights
        </p>
        <div class="flex justify-center space-x-4">
          <a href="#about" class="px-8 py-3 bg-primary text-white font-medium rounded-full hover:bg-opacity-90 transition duration-300 shadow-lg">
            Explore Stories
          </a>
          <a href="#join" class="px-8 py-3 bg-accent text-white font-medium rounded-full hover:bg-opacity-90 transition duration-300 shadow-lg">
            Join Community
          </a>
        </div>
      </div>
    </div>
  </header>

  <!-- Welcome Section -->
  <section id="about" class="py-20 cozy-bg">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h2 class="vintage-text text-4xl font-bold text-gray-800 mb-6">Welcome to Ballard Beat</h2>
        <div class="h-1 w-20 bg-primary mx-auto mb-6"></div>
        <p class="text-lg text-gray-700 mb-10 leading-relaxed">
          Step into a cozy corner of basketball nostalgia, where the squeak of sneakers on hardwood and the roar of the crowd linger like a favorite old record. 
        </p>
      </div>
      
      <div class="max-w-3xl mx-auto bg-white p-8 rounded-xl shadow-lg border-l-8 border-primary">
        <p class="text-gray-700 text-lg leading-relaxed italic">
          At <span class="font-bold text-primary">Ballard Beat</span>, we celebrate the game's rich history, legendary moments, and enduring lessons with a warm, vintage touch. 
          Whether you're a die-hard fan reminiscing about Jordan's fadeaways or a newcomer discovering the magic of the hardwood, our insights are crafted to inspire and inform. 
          Dive into stories that transcend eras, blending classic wisdom with fresh perspectives.
        </p>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="vintage-text text-4xl font-bold text-gray-800 mb-4">Why Ballard Beat?</h2>
        <div class="h-1 w-20 bg-primary mx-auto mb-6"></div>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Discover what makes our vintage basketball journey unforgettable
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {features.map((feature, index) => (
          <div class="feature-card bg-gradient-to-br from-white to-gray-50 p-8 border border-gray-100">
            <div class="w-16 h-16 rounded-full bg-primary bg-opacity-10 flex items-center justify-center mb-6">
              <i class={`${feature.icon} text-2xl text-primary`}></i>
            </div>
            <h3 class="vintage-text text-2xl font-bold text-gray-800 mb-4">{feature.title}</h3>
            <p class="text-gray-600 leading-relaxed">{feature.text}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-20 cozy-bg">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="vintage-text text-4xl font-bold text-gray-800 mb-4">Community Voices</h2>
        <div class="h-1 w-20 bg-primary mx-auto mb-6"></div>
        <p class="text-gray-600 max-w-2xl mx-auto">
          What our readers say about their Ballard Beat experience
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {testimonials.map((testimonial, index) => (
          <div class="testimonial-card">
            <p class="text-gray-700 italic mb-6">"{testimonial.quote}"</p>
            <p class="font-semibold text-gray-800">— {testimonial.author}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section id="join" class="py-20 bg-gradient-to-r from-primary to-accent">
    <div class="container mx-auto px-4 text-center">
      <h2 class="vintage-text text-4xl font-bold text-white mb-6">Join the Ballard Beat Community</h2>
      <p class="text-xl text-white max-w-2xl mx-auto mb-10 opacity-90">
        Be part of our cozy vintage basketball family and never miss an echo from the court
      </p>
      <div class="max-w-md mx-auto">
        <form class="flex flex-col sm:flex-row gap-4">
          <input 
            type="email" 
            placeholder="Your email address" 
            class="flex-grow px-6 py-3 rounded-full focus:outline-none focus:ring-2 focus:ring-white"
          />
          <button 
            type="submit" 
            class="px-8 py-3 bg-white text-primary font-bold rounded-full hover:bg-opacity-90 transition duration-300 shadow-lg"
          >
            Subscribe
          </button>
        </form>
        <p class="text-white text-sm mt-4 opacity-75">
          We respect your privacy. Unsubscribe at any time.
        </p>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white py-12">
    <div class="container mx-auto px-4 text-center">
      <h3 class="vintage-text text-3xl font-bold mb-4">Ballard Beat</h3>
      <p class="text-gray-400 mb-6 max-w-2xl mx-auto">
        Echoes from the Court: Timeless Basketball Insights
      </p>
      <div class="flex justify-center space-x-6 mb-8">
        <a href="#" class="text-gray-400 hover:text-white transition">
          <i class="fab fa-facebook-f"></i>
        </a>
        <a href="#" class="text-gray-400 hover:text-white transition">
          <i class="fab fa-twitter"></i>
        </a>
        <a href="#" class="text-gray-400 hover:text-white transition">
          <i class="fab fa-instagram"></i>
        </a>
        <a href="#" class="text-gray-400 hover:text-white transition">
          <i class="fab fa-pinterest"></i>
        </a>
      </div>
      <p class="text-gray-500 text-sm">
        © {new Date().getFullYear()} Ballard Beat. All rights reserved.
      </p>
    </div>
  </footer>
</Layout>